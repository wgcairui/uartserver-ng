{
  "name": "uartserver-ng",
  "version": "2.0.0",
  "description": "Next generation UART server powered by Bun and Fastify - High performance IoT device management system",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "check-indexes": "bun run scripts/check-indexes.ts",
    "analyze-indexes": "bun run scripts/analyze-indexes.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "fastify": "^5.1.0",
    "mongodb": "^7.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "uart",
    "iot",
    "bun",
    "fastify",
    "high-performance",
    "device-management",
    "modbus",
    "industrial-iot"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "bun": ">=1.1.40"
  }
}
